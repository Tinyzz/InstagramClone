<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editName"
        android:layout_width="379dp"
        android:layout_height="76dp"
        android:ems="10"
        android:hint="please enter name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editPunchPower"
        android:layout_width="359dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="please enter punch power"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        tools:layout_editor_absoluteX="26dp" />

    <EditText
        android:id="@+id/editPunchSpeed"
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="please enter punch speed"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editPunchPower"
        tools:layout_editor_absoluteX="30dp" />

    <EditText
        android:id="@+id/editKickPower"
        android:layout_width="344dp"
        android:layout_height="71dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="please enter kiock power"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editPunchSpeed"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="181dp"
        android:layout_height="49dp"
        android:layout_marginTop="128dp"
        android:text="Button"
        app:layout_constraintTop_toBottomOf="@+id/editKickPower"
        tools:layout_editor_absoluteX="-2dp" />

    <Button
        android:id="@+id/btnNextActivity"
        android:layout_width="89dp"
        android:layout_height="50dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="124dp"
        android:text="switch"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/editKickPower" />
</androidx.constraintlayout.widget.ConstraintLayout>